def getTournament():
    parameters = {
        "api_key": 'Cz7iq1jJiZUI5tzLC7FRN7NdReBlzmmiwXl7eQUK'
    }

    apiCall = requests.get(" http://api.challonge.com/v1/tournaments.json", params=parameters)
    data = apiCall.json()
    if len(data) > 1:
        idx = len(data) - 1
    else:
        idx = 0
    return data[idx]['tournament']['full_challonge_url']

